<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyUI.AddTaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnSaveTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="save" />

                <ImageView
                    android:id="@+id/imgBtn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="?android:attr/actionModeWebSearchDrawable" />

                <Button
                    android:id="@+id/btnUpload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload" />

                <Button
                    android:id="@+id/btnDataPicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pick" />

                <SeekBar
                    android:id="@+id/skrbrImportant"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="10"
                    android:progress="3" />

                <EditText
                    android:id="@+id/tvNeccesary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Neccesary"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/etDueDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Date"
                    android:inputType="textPersonName" />

                <SeekBar
                    android:id="@+id/skbrNeccesry"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="10"
                    android:progress="3" />

                <EditText
                    android:id="@+id/tvImportant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Important"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/etSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="subject"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/etTttle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="tittle"
                    android:inputType="textPersonName" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>